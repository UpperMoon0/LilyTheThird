#:kivy 2.0.0
#:import RGBStrip views.components.rgb_strip

<VTubeTab>:
    orientation: 'vertical'
    padding: dp(20)
    spacing: dp(15)

    # RGB Strip at the top
    RGBStrip:
        size_hint_y: None # Explicitly set no vertical size hint
        height: dp(3)     # Set its height

    # Connection Button
    Button:
        id: connect_button
        text: root.button_text
        size_hint_x: None       # Use fixed width
        size_hint_y: None       # Use fixed height
        width: dp(200)
        height: dp(40)
        pos_hint: {'center_x': 0.5} # Center horizontally
        on_press: root.toggle_connection()
        font_size: '16sp'

    # Status Label
    Label:
        id: status_label
        text: root.status_text
        size_hint_y: None       # Use height based on content
        height: self.texture_size[1] + dp(10)
        halign: 'center'
        valign: 'middle'
        font_size: '14sp'
        color: (0.33, 0.33, 0.33, 1) # #555

    # Spacer to push content above it to the top
    Widget:
        size_hint_y: 1 # Take up remaining vertical space
