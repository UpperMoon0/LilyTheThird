#:kivy 2.0.0
#:import ColorCircle views.components.color_circle.ColorCircle

<DiscordBotStatus>:
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height
    spacing: dp(10) # Spacing between elements
    padding: dp(10)
    canvas.before:
        Color:
            rgba: 0.3, 0.3, 0.3, 1 # Border color
        Line:
            width: dp(1)
            rectangle: self.x, self.y, self.width, self.height
        Color:
            rgba: 0.15, 0.15, 0.15, 1 # Background color
        Rectangle:
            pos: self.x + dp(1), self.y + dp(1)
            size: self.width - dp(2), self.height - dp(2)

    Label:
        text: "Bot Status & Control"
        font_size: '18sp'
        bold: True
        size_hint_y: None
        height: self.texture_size[1] + dp(5)
        halign: 'center'

    # Original Status Display
    BoxLayout:
        orientation: 'horizontal'
        size_hint_x: None
        width: self.minimum_width
        pos_hint: {'center_x': 0.5}
        size_hint_y: None
        height: dp(50)
        spacing: dp(10)

        ColorCircle:
            diameter: dp(30)
            circle_color: root.status_circle_color
            size_hint: None, None
            size: dp(30), dp(30)
            pos_hint: {'center_y': 0.5}

        Label:
            id: status_label
            text: root.status_text
            font_size: '14sp'
            size_hint_x: None
            width: self.texture_size[0]
            valign: 'middle'
            halign: 'left'
            text_size: None, None

    # Toggle Button
    Button:
        id: toggle_button
        text: root.toggle_button_text
        size_hint: None, None
        size: dp(150), dp(40)
        pos_hint: {'center_x': 0.5}
        on_press: root.dispatch('on_toggle_bot_pressed')
        font_size: '16sp'

    # Message Section (Moved here - below status and toggle button)
    BoxLayout:
        id: message_section
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height if root.message_section_visible else 0
        opacity: 1 if root.message_section_visible else 0
        disabled: not root.message_section_visible
        spacing: dp(10) 
        padding: [dp(10), dp(10), dp(10), dp(10)] # Added top padding for separation

        # "Channel ID to send" field
        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: None
            width: dp(300) 
            pos_hint: {'center_x': 0.5}
            size_hint_y: None
            height: dp(40)
            spacing: dp(5) 
            Label:
                text: "Channel ID to send:"
                size_hint_x: 0.45 
                halign: 'left'
                valign: 'middle'
                text_size: self.width, None 
                font_size: '14sp'
            TextInput:
                id: manual_send_channel_id_input
                text: root.manual_send_channel_id
                hint_text: "Enter Channel ID"
                size_hint_x: 0.55 
                size_hint_y: None
                height: dp(40)
                multiline: False
                font_size: '14sp'
                on_text: root.manual_send_channel_id = self.text

        TextInput:
            id: message_input
            text: root.message_text
            hint_text: "Type your message here..."
            size_hint_x: None
            width: dp(300)
            pos_hint: {'center_x': 0.5}
            size_hint_y: None
            height: dp(40)
            multiline: False
            font_size: '14sp'
            on_text: root.message_text = self.text

        BoxLayout:
            size_hint_x: None
            width: self.minimum_width
            pos_hint: {'center_x': 0.5}
            size_hint_y: None
            height: dp(40)
            spacing: dp(10)
            Button:
                id: send_message_button
                text: "Send Message"
                size_hint: None, None
                size: dp(200), dp(40)
                pos_hint: {'center_x': 0.5}
                on_press: root.dispatch('on_send_message_pressed')
                font_size: '16sp'
